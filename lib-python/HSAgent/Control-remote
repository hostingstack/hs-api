import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

import Control
from ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print ''
  print 'Usage: ' + sys.argv[0] + ' [-h host:port] [-u url] [-f[ramed]] function [arg1 [arg2...]]'
  print ''
  print 'Functions:'
  print '  void heartbeat(string deployment_install_token)'
  print '  void snapshot_vm(string deployment_install_token, string log_name, bool first_start)'
  print '  void stop_vm(string deployment_install_token)'
  print '  string start_vm_protocol(string deployment_install_token, string protocol)'
  print '  SSHCredentials fetch_ssh_credentials(string username, string password)'
  print '  void execute_app_command(string deployment_install_token, string log_name, string command_name, string command)'
  print '  void gateway_routes_changed()'
  print ''
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':')
  host = parts[0]
  port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  if url[4]:
    uri += '?%s' % url[4]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = Control.Client(protocol)
transport.open()

if cmd == 'heartbeat':
  if len(args) != 1:
    print 'heartbeat requires 1 args'
    sys.exit(1)
  pp.pprint(client.heartbeat(args[0],))

elif cmd == 'snapshot_vm':
  if len(args) != 3:
    print 'snapshot_vm requires 3 args'
    sys.exit(1)
  pp.pprint(client.snapshot_vm(args[0],args[1],eval(args[2]),))

elif cmd == 'stop_vm':
  if len(args) != 1:
    print 'stop_vm requires 1 args'
    sys.exit(1)
  pp.pprint(client.stop_vm(args[0],))

elif cmd == 'start_vm_protocol':
  if len(args) != 2:
    print 'start_vm_protocol requires 2 args'
    sys.exit(1)
  pp.pprint(client.start_vm_protocol(args[0],args[1],))

elif cmd == 'fetch_ssh_credentials':
  if len(args) != 2:
    print 'fetch_ssh_credentials requires 2 args'
    sys.exit(1)
  pp.pprint(client.fetch_ssh_credentials(args[0],args[1],))

elif cmd == 'execute_app_command':
  if len(args) != 4:
    print 'execute_app_command requires 4 args'
    sys.exit(1)
  pp.pprint(client.execute_app_command(args[0],args[1],args[2],args[3],))

elif cmd == 'gateway_routes_changed':
  if len(args) != 0:
    print 'gateway_routes_changed requires 0 args'
    sys.exit(1)
  pp.pprint(client.gateway_routes_changed())

else:
  print 'Unrecognized method %s' % cmd
  sys.exit(1)

transport.close()
